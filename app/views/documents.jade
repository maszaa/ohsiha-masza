include ./base.jade
  include ./documentsNav.jade
  .container
    h1= title
    hr

    if(!documents.length)
      p Ei julkisia artikkeleja
    else
      each document in documents
        h2= document.category + ": "
          a(href="../document/"+document._id)= document.title
        p
          p
            i= "Kirjoittanut: "
              a(href="../user/"+document.user+"/posts")= document.user
          p(style='white-space:pre;')= document.text
          p
            .line
              i Lis√§tty: #{document.insertDate}
            if(document.insertDate.toString() != document.modifiedDate.toString())
              .line
               i Muokattu: #{document.modifiedDate}
        hr
